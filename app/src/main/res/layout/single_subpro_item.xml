<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selector_default_highlight_rect"
            android:tag="binding_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="-40dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="-35dp"
                    android:tag="binding_3"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/tvdiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignRight="@+id/name"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_discount_percent_off"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:tag="binding_7"
                        android:text="(20%OFF)"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18sp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:tag="binding_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/discount"
                            android:ellipsize="end"
                            android:fontFamily="fonts/DINEXTLTPro-Bold"
                            android:text="Latest Indian Dresses Collections 2017"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btVproduct"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.40"
                        android:background="@color/meesho"
                        android:text="View Products"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.10" />

                    <LinearLayout
                        android:id="@+id/btVproshare"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.40"
                        android:background="#34af23"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:padding="3dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:text="SHARE"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--<com.lid.lib.LabelTextView-->
            <!--style="@style/LabelView"-->
            <!--android:label_distance="55dp"-->
            <!--android:label_orientation="1"-->
            <!--android:label_text="@string/prebooking"-->
            <!--android:tag="binding_14" />-->
        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>